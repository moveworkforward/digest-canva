{
    "compilerOptions": {
        "baseUrl": "./apps/be",
        "rootDir": "./apps/be",
        "paths": {},
        "module": "commonjs",
        "target": "es2016",
        "lib": ["esnext.asynciterable", "dom","es2020"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strict": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
     "include": [
         "src/**/*.ts"
     ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/*.spec.ts"
    ],
    "cliOptions": {
        "exclude": ["node_modules", "**/node_modules"]
    },
    "types": ["typePatches", "jest"],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true,
        "sourceMap": true
    }
}
